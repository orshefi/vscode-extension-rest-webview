{
  "name": "vscode-rest-webview",
  "version": "0.1.0",
  "description": "HTTP REST-like communication between VS Code extensions and webviews using native messaging",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "clean": "lerna run clean && lerna clean --yes",
    "docs": "typedoc",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "lerna": "^7.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "vscode",
    "extension",
    "webview",
    "http",
    "rest",
    "fastify",
    "messaging"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/username/vscode-rest-webview.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "vscode": "^1.60.0"
  }
} 