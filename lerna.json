{
  "version": "0.1.6",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["**/*.md", "**/*.test.js", "**/*.test.ts", "**/test/**", "**/tests/**"]
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/*.md", "**/*.test.js", "**/*.test.ts", "**/test/**", "**/tests/**"]
    }
  },
  "packages": ["packages/*"]
}
